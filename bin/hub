#!/usr/bin/env ruby

$stdout.sync = true

$LOAD_PATH << 'lib'

require 'bundler/setup'
require 'unlimited-jce-policy-jdk7'
require 'jruby-openssl'
require 'travis/hub'


app = Travis::Hub.new(ARGV[0], ARGV[1])

Travis.logger.info('[hub] setting up hub app')
app.setup

Travis.logger.info('[hub] start crunching away')
app.run
